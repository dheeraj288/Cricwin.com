<%= render "shared/navbar" %>
<div class=" row centered-container shadow p-4 mt-5">
      <div class="details" style="text-align: center;">
          <h1 class="text-capitalize">Register Yourself Here</h1>
      </div>
    <div class="sign_up_forming">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
                    
          <div class="field">
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "First Name", class: "input-field" %>
          </div>

          <div class="field">
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "Last Name", class: "input-field" %>
          </div>

          <div class="field">
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: "Phone Number", class: "input-field" %>
          </div>    
          
          <div class="field">
            <%= f.number_field :age, autofocus: true, autocomplete: "age", placeholder: "Age", class: "input-field" %>
          </div>     

           <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "input-field" %>
          </div>

          <div class="field">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "input-field" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", class: "input-field" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>

<style>
.centered-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  max-width: 36%; /* Set a maximum width to limit the container size */
  width: 100%; /* Make the container responsive to its parent's width */
  margin: 0 auto; /* Center the container horizontally */
  padding: 14px;
  margin-bottom:55px;
  }

.sign_up_forming{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20px;
  width:100%;
}

.input-field {
    width: 100%;
    font-size: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
}

.actions input[type="submit"] {
    height: 40px; 
    width: 100%;
    background-color: #ff0066;
    margin-bottom:35px;
    margin-top:15px;
    font-size: 22px;
    font-weight:bold;
    border-radius:10px;
}
.sign_up_forming .field .input-field {
  width: 100%;
  padding-top: 12px;
  padding-bottom: 12px; /* Adjust padding to center text vertically */
  margin-bottom: 12px;
  font-size: 20px;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-sizing: border-box;
}

</style>