<%= render "shared/navbar" %>
<div class="row centered-container shadow p-4 mt-5 ">
    <div class="details" style="text-align: center;">
        <h1 class="text-capitalize">Login to your account</h1>
    </div>
    <div class="form">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "input-field" %>
            </div>

            <div class="field">
                <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "input-field" %>
            </div>

            <% if devise_mapping.rememberable? -%>
                <div class="fielders">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                </div>
            <% end -%>

            <div class="actions">
                <%= f.submit "Log in" %>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
</div>

<style>
.centered-container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.form{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40px;
  width:100%;
}
.input-field {
    width: 100%;
    padding-top: 30px;
    margin-bottom: 30px;
    font-size: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
}

.form .fielders{
    height: 40px !important;
    padding-top: 15px !important;
    font-size: 20px !important;
    padding-bottom: 50px !important;
}
.actions input[type="submit"] {
    height: 40px; 
    width: 100%;
    background-color: #ff0066;
    margin-bottom:35px;
    font-size: 22px;
    font-weight:bold;
    border-radius:10px;
}
.form .field .input-field {
  width: 100%;
  padding-top: 12px;
  padding-bottom: 20px; 
  margin-bottom: 25px;
  font-size: 20px;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-sizing: border-box;
}

</style>